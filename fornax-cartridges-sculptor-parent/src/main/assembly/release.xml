<assembly>
  <id>release</id>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>target/site</directory>
      <outputDirectory>docs</outputDirectory>
      <includes>
        <include>site/apidocs/**</include>
        <include>site/xref/**</include>
        <include>site/xref-test/**</include>
      </includes>
    </fileSet>
  </fileSets>
  <moduleSets>
    <moduleSet>
      <includes>
          <include>org.fornax.cartridges:org.fornax.cartridges.emf.sculptor.dsl</include>
          <!-- <include>org.fornax.cartridges:org.fornax.cartridges.emf.sculptor.dsl.editor</include> -->
