		  <include>org.fornax.cartridges:fornax-cartridges-sculptor-generator</include>
		  <include>org.fornax.cartridges:fornax-cartridges-sculptor-reference</include>
		  <include>org.fornax.cartridges:fornax-cartridges-sculptor-framework</include>
		  <!--
		  <include>org.fornax.cartridges:fornax-cartridges-sculptor-examples-helloworld</include>
		  <include>org.fornax.cartridges:fornax-cartridges-sculptor-examples-library</include>
		  -->
      </includes>
      <binaries>
        <outputDirectory>lib</outputDirectory>
        <includeDependencies>true</includeDependencies>
        <unpack>false</unpack>
      </binaries>
      <sources>
        <outputDirectory></outputDirectory>
      </sources>
    </moduleSet>
  </moduleSets>
</assembly>