import "classpath:/library-person.btdesign"
import 'classpath:/library.btdesign' 

gui LibraryWeb for Library {

	Module for person {
		
		View PersonForm for Person {
			> @PersonService
	
			contents {
				inputText nameField {
					label = "Name"
				}
				table table1 {
					label = "Table uno"
				}
				
				button saveButton {
					label = "Save"
				}
				
				informationalText info1 {
					label = "Info Numero Uno"
				}
			}
		}
		
		View TableView {
			
			contents {
				table mytable for Person {
					label="My Table"
					
					columns {
						name type=Text;
					}
				}
			}
		}
		
		
		"This is some MyEvent1 documentation"
		Event MyEvent1 {
			String attr1;
			
			"This is some documentation"
			Integer attr2;
		}
	}
}